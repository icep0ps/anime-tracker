html
  include mixins/anime/anime.pug
  include mixins/popups/editor.pug
  head
    title Search Â· Anitrack
    script(src="js/main.js" defer) 
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="https://fontlibrary.org//face/arco-perpetuo", type="text/css", media="screen")
    link(rel="stylesheet", href="https://fontlibrary.org//face/grammatika", type="text/css", media="screen")
    link(rel="stylesheet", href="css/main.css", type="text/css")
    link(rel="stylesheet", href="css/search.css", type="text/css")
    link(rel="stylesheet", href="css/editor.css", type="text/css")
  body
   .wrapper
        div
          a(href="/", class="header") 
            h1 Anitrack
            span(class="material-icons") gps_fixed
        if user
          +user(user)
            
        form(action="http://localhost:3000/search", method="post", id="search_form")
            .search_container
                input(type="search", name="search", id="search",placeholder="search for an anime")
                button(type="submit") search
        
        section 
          h1 Results:
          .results
            if results
              each anime in results   
                +grid_anime(anime.node)
            else 
              h1 no results found 
        
        +editor()
              

              
              
              
          
          
        
              